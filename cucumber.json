{
    "default": {
        "require": [
            "tests/steps/**/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "paths": ["tests/features/**/*.feature"],
        "format": [
            "progress-bar",
            "json:reports/cucumber.json",
            "html:reports/cucumber.html"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "failFast": true
    }
}